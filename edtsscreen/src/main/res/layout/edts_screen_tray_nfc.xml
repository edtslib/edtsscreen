<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/dimen_40dp"
    android:paddingTop="@dimen/dimen_40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:src="@drawable/edts_screen_ic_nfc_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/H1"
        android:textColor="@color/colorNeutral70"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/nfc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/B2"
        android:textColor="@color/colorNeutral50"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/nfc_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.appcompat.widget.LinearLayoutCompat>